{
  "name": "astral-turf",
  "version": "8.0.0",
  "private": true,
  "description": "AI-powered soccer tactical planner desktop application.",
  "scripts": {
    "dev": "tauri dev",
    "vite:dev": "vite",
    "check-ports": "node scripts/check-port.js",
    "build": "vite build",
    "tauri:build": "tauri build",
    "start": "npm run dev",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "test:all": "npm run test:run && npm run e2e",
    "quality": "npm run type-check && npm run lint && npm run format:check && npm run test:run",
    "prepare": "husky"
  },
  "keywords": [
    "soccer",
    "tactics",
    "tauri",
    "react",
    "ai"
  ],
  "author": "Astral Turf Team",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tauri-apps/cli": "^1.6.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.9",
    "esbuild": "^0.20.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.1",
    "lint-staged": "^16.1.5",
    "msw": "^2.11.0",
    "prettier": "^3.6.2",
    "vite": "^5.4.19",
    "vitest": "^2.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run --reporter=verbose"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.9.0",
    "@react-aria/button": "^3.14.1",
    "@react-aria/focus": "^3.21.1",
    "@react-aria/interactions": "^3.25.5",
    "@react-spring/web": "^10.0.1",
    "@tauri-apps/api": "^1.6.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "axios": "^1.7.8",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "crypto-js": "^4.2.0",
    "dexie": "^4.0.8",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.12",
    "googleapis": "^144.0.0",
    "html-to-image": "^1.11.11",
    "i18next": "^25.4.2",
    "immer": "10.1.1",
    "jose": "^6.1.0",
    "lottie-react": "^2.4.1",
    "node-cron": "^3.0.3",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-aria": "^3.43.1",
    "react-aria-components": "^1.12.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.7.3",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^6.25.1",
    "react-spring": "^10.0.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.0.3",
    "validator": "^13.15.15",
    "zod": "^4.1.5"
  }
}
